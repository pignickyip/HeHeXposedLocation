<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.14">

        <TextView
            android:id="@+id/workmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_text"
            />

        <Button
            android:id="@+id/but_starttime_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mode_work_start_time_button" />

        <Button
            android:text="@string/mode_work_end_time_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/but_endtime_work" />

        <Button
            android:text="@string/clear_work_but_titile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/but_clear_work" />

        <ToggleButton
            android:text="@string/work_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/WorkModeOn" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.14">

        <TextView
            android:id="@+id/restmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_text"
             />

        <Button
            android:id="@+id/but_starttime_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mode_rest_start_time_button" />

        <Button
            android:id="@+id/but_endtime_rest"
            android:text="@string/mode_rest_end_time_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="@string/clear_rest_but_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/but_clear_rest" />

        <ToggleButton
            android:text="@string/rest_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RestModeOn" />

    </LinearLayout>

</LinearLayout>
